<h1>Welcome <%= current_team_member %></h1>
<ul data-role="listview">
  <li>
    <%- if team_member_signed_in? -%>
      <%= link_to 'Sign Out', destroy_team_member_session_path %>
    <%- else -%>
      <%= link_to "Sign In", new_team_member_session_path  %></li>
    <%- end -%>
</ul>

<%- if current_team_member -%>
  <h2>Remaining Questions</h2>
  <div id="team_solutions">
    <table>
      <thead>
        <tr>
          <th>Question</th>
          <th>Email Subject</th>
          <th>Possible</th>
          <th>Clues</th>
        </tr>
      </thead>
      <tbody>
      <% current_team_member.team.solutions.with_state(:open).each do |solution| %>
        <tr>
          <td><%= solution.question %></td>
          <td><%= solution.email_subject %></td>
          <td><%= solution.score.possible %></td>
          <td>
            <ul>
              <%- solution.clues.each do |clue| -%>
                <li>
                  <%= content_tag 'span', clue, :class => dom_class(clue) %>
                  <%- if clue.purchased? -%>
                    <br><span class="clue_text"> <%= clue.text %> (-<%= clue.point_cost %> pts)</span>
                  <%- else -%>
                    <%= link_to 'Purchase?', purchase_clue_path(clue), :method => :post, :confirm => "This will reduce the questions value by #{clue.point_cost}. Are you sure?" %>
                  <%- end -%>
                </li>
              <%- end -%>
            </ul>
          </td>
        </tr>
      <%- end -%>
      </tbody>
    </table>
  </div>
<%- end -%>

<div id="leader_board">
  <h2>Leader Board</h2>
  <%= render 'leader_board' %>
</div>
