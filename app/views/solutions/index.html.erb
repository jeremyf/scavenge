<h1>Listing solutions</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Team</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @solutions.each do |solution| %>
  <tr>
    <td><%= solution.question_id %></td>
    <td><%= solution.team_id %></td>
    <td><%= solution.state %></td>
    <td><%= link_to 'Show', solution %></td>
    <td><%= link_to 'Edit', edit_solution_path(solution) %></td>
    <td><%= link_to 'Destroy', solution, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

